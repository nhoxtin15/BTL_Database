<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<Pane prefHeight="176.0" prefWidth="300.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.database_btl.Manager.controller.RemoveEmployeeController">
    <children>
        <VBox fillWidth="false" prefWidth="300.0" spacing="20.0">
            <children>
                <HBox alignment="TOP_CENTER" prefHeight="20.0" prefWidth="300.0">
                    <children>
                        <Label text="Employee Remover">
                            <font>
                                <Font name="System Bold" size="16.0" />
                            </font>
                        </Label>
                    </children>
                </HBox>
                <VBox pickOnBounds="false" prefHeight="62.0" prefWidth="212.0" spacing="10.0" VBox.vgrow="NEVER">
                    <children>
                        <HBox alignment="CENTER_LEFT" prefHeight="26.0" prefWidth="208.0" spacing="5.0">
                            <children>
                                <Label prefWidth="35.0" text="SSN" />
                                <TextField fx:id="PhoneToFind" prefWidth="150.0" />
                            </children>
                            <VBox.margin>
                                <Insets />
                            </VBox.margin>
                            <padding>
                                <Insets left="10.0" />
                            </padding>
                        </HBox>
                    </children>
                </VBox>
                <HBox alignment="TOP_RIGHT" prefHeight="26.0" prefWidth="280.0">
                    <children>
                        <Button mnemonicParsing="false" onAction="#findCustomer" text="Remove employee" />
                    </children>
                    <VBox.margin>
                        <Insets right="20.0" />
                    </VBox.margin>
                </HBox>
            </children>
            <padding>
                <Insets top="10.0" />
            </padding>
        </VBox>
    </children>
</Pane>
