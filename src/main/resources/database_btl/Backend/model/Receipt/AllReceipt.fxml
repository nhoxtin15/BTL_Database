<?xml version="1.0" encoding="UTF-8"?>


<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="700.0" prefWidth="700.0" style="-fx-background-color: #ffffff;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="database_btl.Backend.model.controller.AllReceiptController">
   <children>
      <TabPane fx:id="receipts" prefHeight="600.0" prefWidth="700.0" tabClosingPolicy="UNAVAILABLE" tabMaxHeight="20.0">
         <tabs>

         </tabs>
      </TabPane>
      <HBox alignment="CENTER" fillHeight="false" prefHeight="100.0" prefWidth="575.0" spacing="15.0" VBox.vgrow="NEVER">
         <children>
            <Button mnemonicParsing="false" prefHeight="60.0" prefWidth="160.0" style="-fx-background-color: #3fa03c;" text="Merge" onAction="#mergeReceipt" textFill="WHITE" HBox.hgrow="ALWAYS">
               <font>
                  <Font name="System Bold" size="28.0" />
               </font>
            </Button>
            <Button mnemonicParsing="false" prefHeight="60.0" prefWidth="160.0" style="-fx-background-color: #ef3a6a;" text="Ring bell" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="28.0" />
               </font>
            </Button>
            <Button mnemonicParsing="false" prefHeight="60.0" prefWidth="160.0" style="-fx-background-color: #0f7ad0;" text="Check out" textFill="WHITE" onAction="#checkOut">
               <font>
                  <Font name="System Bold" size="28.0" />
               </font>
            </Button>
         </children>
      </HBox>
   </children>
</VBox>
